# 环境配置
SCRAPEVIEW_ENVIRONMENT=development  # development 或 production

# 数据库配置
SCRAPEVIEW_DB_TYPE=sqlite  # sqlite 或 mysql
# SQLite配置
SCRAPEVIEW_SQLITE_PATH=db/scrapeview.db
# MySQL配置
SCRAPEVIEW_DB_HOST=localhost
SCRAPEVIEW_DB_PORT=3306
SCRAPEVIEW_DB_USER=root
SCRAPEVIEW_DB_PASSWORD=root
SCRAPEVIEW_DB_NAME=scrapeview

# 日志配置
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_DIR=logs

# 图片存储配置
IMAGES_STORAGE_PATH=uploads/images
IMAGES_URL_PREFIX=/api/v1/images

# HTTP代理设置
HTTP_PROXY=http://127.0.0.1:7890
HTTPS_PROXY=http://127.0.0.1:7890
NO_PROXY=localhost,127.0.0.1

# 安全配置
SECRET_KEY=your-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=4320  # 3天
REFRESH_TOKEN_EXPIRE_DAYS=30